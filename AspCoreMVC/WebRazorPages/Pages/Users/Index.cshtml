@page
@model WebRazorPages.Pages.Users.IndexModel
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1 class="text-primary">
                Users Razor List
            </h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Users/Create" class="btn btn-primary btn-lg">
                Add New User
            </a>

        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="text-center">
            <tr>  
                <th class="table-warning">
                    User Login
                </th>
                <th class="table-danger">
                    User Password
                </th>
                <th class="table-info">
                    Created
                </th>
                <th class="table-secondary">
                    State
                </th>
                <th></th>
            <tr/>
        </thead>
            <tbody class="text-center">
                @foreach(var obj in Model.UserList)
                {
                    <tr>
                        <td>@obj.Login</td>
                        <td>@obj.Password</td>
                        <td>@obj.Created</td>
                        <td>@obj.UserState</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Users/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Users/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody> 
    </table>
</div>