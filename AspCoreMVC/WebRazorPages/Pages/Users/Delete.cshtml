            <label asp-for="User.Login" class="p-0"></label>
            <input asp-for="User.Login" disabled class="form-control"/>
            
        </div>
        <div class="mg-3 row p-1">
            <label asp-for="User.Password" class="p-0"></label>
            <input asp-for="User.Password" disabled class="form-control"/>
            
        </div>
        <div class="mg-3 row p-1">
            <label asp-for="User.UserState" class="p-0"></label>
            <input asp-for="User.UserState" disabled class="form-control"/>
            
        </div>
        <div class="row">
            <div class="col-6">

            </div>
            <div >

            </div>
        </div>
        <a asp-page="/Users/Index" class="btn btn-secondary mt-4 btn-lg float-end" style="width:150px">
            Back
        </a>
        <button type="submit" class="btn btn-danger mt-4 btn-lg float-end form-control" style="width:150px">Delete</button>
    </div>
</form> 