@page
@model WebRazorPages.Pages.Users.EditModel

<h1>Edit User</h1>
<form method="post">
    <input asp-for="User.Id" hidden/>
    <input asp-for="User.Created" hidden/>
    <input asp-for="User.GroupId" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"></h2>
            <hr/>
        </div>
        <div class="mg-3 row p-1">
            <label asp-for="User.Login" class="p-0"></label>
            <input asp-for="User.Login"  class="form-control"/>
            <span asp-validation-for="User.Login" class="text-danger"></span>
        </div>
        <div class="mg-3 row p-1">
            <label asp-for="User.Password" class="p-0"></label>
            <input asp-for="User.Password" class="form-control"/>
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>
        <div class="mg-3 row p-1">
            <label asp-for="User.UserState" class="p-0"></label>
            <input asp-for="User.UserState"  class="form-control"/>
            <span asp-validation-for="User.UserState" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">

            </div>
            <div >

            </div>
        </div>
        <a asp-page="/Users/Index" class="btn btn-secondary mt-4 btn-lg float-end" style="width:150px">
            Back
        </a>
        <button type="submit" class="btn btn-primary mt-4 btn-lg float-end form-control" style="width:150px">Update</button>
    </div>
</form> 

@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }

}