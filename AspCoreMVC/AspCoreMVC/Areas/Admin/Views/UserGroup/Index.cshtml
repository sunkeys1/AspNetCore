@model List<UserGroup>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1>
                Users Group List
            </h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="UserGroup" asp-action="Upadd" class="btn btn-primary btn-lg">
                Add New User Group
            </a>

        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="text-center">
            <tr>  
                <th class="table-warning">
                    UserGroup Description
                </th>
                <th class="table-primary">
                    UserGroup Members
                </th>
                <th class="table-danger">
                    UserGroup Created Date 
                </th>
                <th class="table-info">
                    State
                </th>
                <th></th>
            <tr/>
        </thead>
            <tbody class="text-center">
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Description</td>
                        <td>@obj.MemberId</td>
                        <td>@obj.CreatedDate</td>
                        <td>@obj.Code</td>
                        
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="UserGroup" asp-action="Upadd" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="UserGroup" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody> 
    </table>
</div>